radius(radius)
  -moz-border-radius: radius
  -webkit-border-radius: radius
  border-radius: radius

vertical-gradient(startColor, endColor)
  background: endColor
  background: -moz-linear-gradient(startColor, endColor)
  background: -webkit-gradient(linear, left top, left bottom, from(startColor), to(endColor))

box-shadow()
  -moz-box-shadow: arguments
  -webkit-box-shadow: arguments
  box-shadow: arguments

transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  -o-transition: arguments
  transition: arguments

background-size()
  -webkit-background-size: arguments
  -moz-background-size: arguments
  -o-background-size: arguments
  background-size: arguments

ellipsis()
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

// Colours
background-color = #E8EBEF
faded-text = #999
lightgrey-background = #F0EEEE
border-color = #AFAFB6

@font-face
  font-family: 'EntypoRegular'
  src: url('../font/entypo-webfont.eot') format('eot')
  src: url('../font/entypo-webfont.eot?#iefix') format('embedded-opentype')
  src: url('../font/entypo-webfont.woff') format('woff')
  src: url('../font/entypo-webfont.ttf') format('truetype')
  src: url('../font/entypo-webfont.svg') format('svg') active
  font-weight: normal
  font-style: normal

.clear
  clear: both

* html .clearfix
  height: 1%
  overflow: visible

*+html .clearfix
  min-height: 1%

.clearfix:after
  clear: both
  content: "."
  display: block
  height: 0
  visibility: hidden
  font-size: 0

.oe_e
  font-family: "entypoRegular" !important
  font-size: 36px
  font-weight: 300 !important

.frame-header
  position: absolute
  top: 0
  left: 0
  right: 0
  vertical-gradient(#fcfcfc, #dedede)
  border-bottom: 1px solid border-color !important
  padding: 5px

.navbar
  .brand
    margin-left: 0
    padding: 8px 16px 8px
  .nav
    font-size: 14px
    li
      a
        padding: 8px 12px
      &:hover
        color: #555555
        text-decoration: none
        background-color: #e5e5e5
        box-shadow(inset 0 3px 8px rgba(0, 0, 0, 0.125))
    .oe_e
      line-height: 4px
      margin-left: 3px
      position: relative
      top: 4px
    .user-box
      float: left
    .clip
      top: -3px


.navbar-inner
  min-height: 36px

* 
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  padding-top: 36px
  color: #4c4c4c
  font-family: Lato, Helvetica, sans-serif
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.5)
  font-size: 13px
  overflow: hidden

ul, ol
  padding: 0
  margin: 0

li
  list-style-type: none

form
  margin: 0

input, textarea
  font-family: Lato, Helvetica, sans-serif
  font-size: 13px
  color: #333
  padding: 1px 5px
  border: 1px solid #AEB9BD
  radius(3px)
  box-shadow(inset 0 1px 4px rgba(0, 0, 0, 0.2))

.clip
  position: relative
  float: left
  width: 26px
  height: 26px
  margin-right: 4px
  box-shadow(0 0 2px 1px rgba(0,0,0,.25))
  .avatar
    position: absolute
    width: 26px
    height: auto
    clip: rect(0, 26px, 26px, 0)
  .avatar-wide
    height: 26px
    width: auto
    clip: rect(0px, 26px, 26px, 0)

.openerp
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  .navbar
    height: 32px
    vertical-gradient(#646060, #262626)
    .menuItem
      display: inline-block
      a
        display: block
        padding: 5px 10px 7px
        line-height: 20px
        text-decoration: none
        color: #EEE
        vertical-align: top
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)
        transition(all 0.2s ease-out)
        &:hover
          background: rgba(0,0,0,0.2)
          text-shadow: black 0px 0px 3px
          color: white
          box-shadow(0 1px 2px rgba(0,0,0,0.4) inset)
    .active
      background: rgba(0,0,0,0.30)
      text-shadow: black 0px 0px 3px
      box-shadow(0 1px 2px rgba(0,0,0,0.4) inset)
  .pageHeader
    padding: 8px
    border-bottom: 1px solid border-color
    vertical-gradient(#fcfcfc, #dedede)
    h2
      margin: 0
      font-size: 18px


  .main
    position: absolute
    top: 32px
    bottom: 0
    left: 0
    right: 0
  .menu
    position: absolute
    left: 0
    top: 0
    bottom: 0
    width: 220px
    background: lightgrey-background
    border-right: 1px solid border-color
    text-shadow: 0 1px 1px white
    padding-bottom: 16px
    .logo
      width: 220px
      display: block
      text-align: center
      height: 70px
      line-height: 70px
      img
        height: 40px
        width: 157px
        margin: 14px 0
  .content
    position: absolute
    left: 220px
    right: 0
    top: 0
    bottom: 0

